<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="ru" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Biobank</title>
    <style>
        .button {
            display: block;
            width: 280px;
            padding: 6px;
            text-align: center;
            font-size: 14px;
            border-radius: 5px;
            text-transform: uppercase;
            font-weight: bold;
            color: #fff;
            border: 1px solid #555;
            letter-spacing: 1px;
            background-color: #3e66a0;
            text-decoration: none
        }
        .outer-table {
            background-color: #ffffff;
            max-width: 600px;
            width: 100%;
            border: none;
            margin: 0 auto;
            border-spacing: 0;
            border-collapse: collapse;
        }
        .inner-table {
            width: 100%;
            border-spacing: 0;
            border-collapse: collapse;
        }
        .outer-td {
            width: 100%;
            vertical-align: top;
            border-bottom: 1px solid #eee;
        }
        .inner-td {
            width: 100%;
            padding: 20px;
            vertical-align: top;
            font-size: 15px;
            font-family: sans-serif;
            line-height: 1.4;
            color: #333333;
        }
    </style>
</head>

<body>
{% set url = frontend_url('signup/confirm', {'token': token.value} ) %}
<table cellpadding="0" cellspacing="0" style="width: 100%; background-color: #f6f6f6">
    <tbody>
    <tr>
        <td style="padding: 25px 0;">
            <table align="center" cellpadding="0" cellspacing="0" class="outer-table">
                <tbody>
                <tr>
                    <td class="outer-td">
                        <table border="0" cellspacing="0" cellpadding="0" class="inner-table">
                            <tbody>
                            <tr>
                                <td class="inner-td">
                                    {% block body %}{% endblock %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>

</body>
</html>